{
  "network": {
    "udp_address": "127.0.0.1",
    "broadcast_address": "172.16.79.255",
    "udp_port": 19711,
    "receive_port": 19710,
    "timeout": 5.0
  },
  "gps": {
    "data_file": "data/AguasVivasGPSData.mat",
    "start_timeout": 5,
    "time_between_positions": 1.0,
    "max_stored_positions": 1000
  },
  "map": {
    "delta_lat": 0.075,
    "delta_lon": 0.15,
    "zoom_level": 13,
    "update_threshold_km": 1.0,
    "cache_size": 100,
    "tile_url": "http://a.tile.openstreetmap.org/{0}/{1}/{2}.png"
  },
  "ui": {
    "window_title": "GPS Position Receiver",
    "map_widget_width": 500,
    "map_widget_height": 300,
    "plot_update_interval": 1000
  },
  "data": {
    "output_dir": "config",
    "default_filename": "car_position_nmea_0183.xlsx",
    "auto_save": false,
    "save_interval": 300
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "gps_system.log",
    "max_bytes": 10485760,
    "backup_count": 5
  }
}
